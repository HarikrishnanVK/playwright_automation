    "@wdio/mocha-framework": "8.8.7",
    "@wdio/reporter": "8.8.7",
    "wdio-html-nice-reporter": "8.1.0",
    "@wdio/spec-reporter": "8.8.7",
    "@wdio/types": "8.8.7",
    "allure-commandline": "2.22.0",
